<?xml version="1.0" encoding="UTF-8"?>

<configuration status="error">
    <property scope="context" name ="logFolder" value="c:/temp/logback-test" />
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{dd-MM-yyyy HH:mm:ss.SSS} %magenta([%thread]) %-5level %logger{36}.%M - %msg%n</pattern>
        </encoder>
    </appender>
    
    <appender name="RollingFile" class = "ch.qos.logback.core.rolling.RollingFileAppender">
        <append>true</append>
        <file>${logFolder}/log.log</file>
        <rollingPolicy class= "ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>${logFolder}/log.%i.log</fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>3</maxIndex>
        </rollingPolicy>
        
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>1KB</maxFileSize>
        </triggeringPolicy>
        <encoder>
            <pattern>%d{dd-MM-yyyy HH:mm:ss.SSS} [%thread] %-5level %logger{36}.%M - %msg%n</pattern>
        </encoder>
        
    </appender>
    <root level="error">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="RollingFile" />
    </root>
</configuration>